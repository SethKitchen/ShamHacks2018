	</head>
	<body class="landing">

		<!-- Page Wrapper -->
			<div id="page-wrapper">

				<!-- Header -->
					<header id="header" class="alt">
						<h1><a href="index.html">Wild Blue Yonder</a></h1>
						<nav id="nav">
							<ul>
								<li class="special">
									<a href="#menu" class="menuToggle"><span>Menu</span></a>
									<div id="menu">
										<ul>
											<li><a href="/">Home</a></li>
											<%if (!user) { %>
												<li><a href="/login">Login</a></li>
												<li><a href="/login">Sign Up</a></li>
											<% } else { %>
												<li><a href="/logout">Logout</a></li>
												<li><a href="/account" class="button special">My Profile</a></li>
											<% } %>
										</ul>
									</div>
								</li>
							</ul>
						</nav>
					</header>

		<!-- Main -->
		<article id="main">
			<header>
					<h2>Manage Items:</h2>
					<p>Edit the details of a product and update it on our site.</p>
				</header>
				<section class="wrapper style5">
				<div class="row 150%">
					<div class="4u 12u$(medium)">

						<!-- Sidebar -->
						<section id="sidebar">
							<section>
								<h3>Product Details</h3>
								<p>Include unit cost, quantity, pick-up available, and an image, so buyers can filter. </p>
							</section>
						</section>

					</div>
					<div class="8u$ 12u$(medium) important(medium)">

						<!-- Content -->
						<section id="content">
						
							<h2>Current Items</h2>
							<% if (items) { %>
								<% for(var i=0; i<items.length; i++) {%>
									<% console.log(items[i]) %>
									<form method='post' action='/updateSelling' style='float:left;'>
										<% if (items[i].Title) { %>
											<strong>Title/Name (100 Character Max):</strong><input name="itemname" type="text"  value='<%-items[i].Title.toString().trim() %>' /><br>
										<% } else { %>
											<strong>Title/Name (100 Character Max):</strong><input name="itemname" type="text" value="" /><br>
										<% } %>
										<% if (items[i].Cost) { %>
											<strong>Cost:</strong> <input name="itemcost" type="text" <%- "value="+(items[i].Cost.toString().trim()) %> /><br>
										<% } else { %>
											<strong>Cost:</strong><input name="itemcost" type="text" value="" /><br>
										<% } %>
										<% if (items[i].Quantity) { %>
											<strong>Quantity Available:</strong> <input name="itemquantity" type="text" <%- "value="+(items[i].Quantity.toString().trim()) %> /><br>
										<% } else { %>
											<strong>Quantity Available:</strong><input name="itemnquantity" type="text" value="" /><br>
										<% } %>
										<% if (items[i].PickUpAvailable) { %>
											<strong>Pick-up available (yes/no)?</strong> <input name="itempickup" type="text" <%- "value="+(items[i].PickUpAvailable.toString().trim()) %> /><br>
										<% } else { %>
											<strong>Pick-up available (yes/no):</strong><input name="itempickup" type="text" value="" /><br>
										<% } %>
										<% if (items[i].MainImageLink) { %>
											<strong>Main Image Link: </strong> <input name="itemimage" type="text" <%- "value="+(items[i].MainImageLink.toString().trim()) %> /><br>
											<img <%- "src="+(items[i].MainImageLink.toString().trim()) %>><br>
										<% } else { %>
											<strong>Main Image Link:</strong><input name="itemimage" type="text" value="" /><br>
										<% } %>
										<% if (items[i].ImageLink2) { %>
											<strong>Image Link 2: </strong> <input name="itemimage2" type="text" <%- "value="+(items[i].ImageLink2.toString().trim()) %> /><br>
											<img <%- "src="+(items[i].ImageLink2.toString().trim()) %>><br>
										<% } else { %>
											<strong>Image Link 2:</strong><input name="itemimage2" type="text" value="" /><br>
										<% } %>
										<% if (items[i].ImageLink3) { %>
											<strong>Image Link 3: </strong> <input name="itemimage3" type="text" <%- "value="+(items[i].ImageLink3.toString().trim()) %> /><br>
											<img <%- "src="+(items[i].ImageLink3.toString().trim()) %>><br>
										<% } else { %>
											<strong>Image Link 3:</strong><input name="itemimage3" type="text" value="" /><br>
										<% } %>
										<% if (items[i].ImageLink4) { %>
											<strong>Image Link 4: </strong> <input name="itemimage4" type="text" <%- "value="+(items[i].ImageLink4.toString().trim()) %> /><br>
											<img <%- "src="+(items[i].ImageLink4.toString().trim()) %>><br>
										<% } else { %>
											<strong>Image Link 4:</strong><input name="itemimage4" type="text" value="" /><br>
										<% } %>
										<% if (items[i].ImageLink5) { %>
											<strong>Image Link 5: </strong> <input name="itemimage5" type="text" <%- "value="+(items[i].ImageLink5.toString().trim()) %> /><br>
											<img <%- "src="+(items[i].ImageLink5.toString().trim()) %>><br>
										<% } else { %>
											<strong>Image Link 5:</strong><input name="itemimage5" type="text" value="" /><br>
										<% } %>
										<% if (items[i].DescriptionTags) { %>
											<strong>Description/Tags (100 character max): </strong> <input name="itemtags" type="text" value='<%-items[i].DescriptionTags.toString().trim() %>' /><br>
										<% } else { %>
											<strong>Description/Tags (100 character max): </strong><input name="itemtags" type="text" value="" /><br>
										<% } %>
										<% if (items[i].id) { %>
											<input name="itemid" type="hidden" <%- "value="+(items[i].id.toString().trim()) %> />
										<% } %>
										<strong>Delete Item (yes/no)?: </strong> <input type="text" name="deleteItem" value="No" />
										<input type="submit" value="Update" />
										
									</form>
								<% } %>
							<% } %>
							<hr style="border: dashed 3px;" />

							<style>
								div.transbox {
									opacity: 0.65;
								}
							</style>
						</section>
					</div>
				</div>
			</div>
		</div>
		</section>
		</article>

