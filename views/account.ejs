	<body class="landing">

		<!-- Page Wrapper -->
			<div id="page-wrapper">

				<!-- Header -->
					<header id="header" class="alt">
						<h1><a href="index.html">Spectral</a></h1>
						<nav id="nav">
							<ul>
								<li class="special">
									<a href="#menu" class="menuToggle"><span>Menu</span></a>
									<div id="menu">
										<ul>
											<li><a href="/">Home</a></li>
											<%if (!user) { %>
												<li><a href="/login">Login</a></li>
												<li><a href="/login">Sign Up</a></li>
											<% } else { %>
												<li><a href="/logout">Logout</a></li>
												<li><a href="/account" class="button special">My Profile</a></li>
											<% } %>
										</ul>
									</div>
								</li>
							</ul>
						</nav>
					</header>

		<!-- Main -->
		<article id="main">
			<header>
					<h2>Update your Profile:</h2>
					<p>View your personal information which is seen by people you do transactions with. Edit the basics by editing them in your Google Account.</p>
				</header>
				<section class="wrapper style5">
				<div class="row 150%">
					<div class="4u 12u$(medium)">

						<!-- Sidebar -->
						<section id="sidebar">
							<section>
								<h3>Personal Information</h3>
								<p>All information is optional and public to verify status (except race and gender which are always private).</p>
							</section>
							<% if (data) { %>
								<% if (data[0].IsVeteran.toLowerCase()=='y' || data[0].IsVeteran.toLowerCase()=='yes' || data[0].IsVeteran.toLowerCase()=='true') { %>
									<section>
										<form method='get' action="/sell">
											<input type='submit' value='Sell an Item'>
										</form>
										<p>Post your product on our site to sell. </p>
									</section>
									<section>
										<form method='get' action="/viewSelling">
											<input type='submit' value='Manange your listings'>
										</form>
										<p>Change things like your product images, quantities, and costs. </p>
									</section>
								<% } %>
							<% } %>
						</section>

					</div>
					<div class="8u$ 12u$(medium) important(medium)">

						<!-- Content -->
						<section id="content">
						

							<h2>Current Information</h2>
							<% if(user.photos.length>0) { %>
								<span class="image"><img id="image" <%- "src="+user.photos[0].value %> alt="Photo" height="150" width="150" /></span><br>
								<% } else { %>
									<span class="image"><img id="image" src="https://pixabay.com/static/uploads/photo/2014/04/03/10/10/man-310013_960_720.png" alt="Photo" height="150" width="150" /></span><br>
									<% } %>
										<strong>First Name:</strong> <span id="currentfname"><%= user.name.givenName %></span><br>
										<strong>Last Name:</strong> <span id="currentlname"><%= user.name.familyName %></span><br>
										<strong>Email:</strong> <span id="currentemail"><%= user.email %></span><br>
										<% if (data) { %>
											<% if (data[0].DateOfBirth) { %>
												<strong>Date of Birth:</strong> <span id="currentdob"><%= data[0].DateOfBirth %></span><br>
											<% } %>
											<% if (data[0].Address) { %>
												<strong>Address:</strong> <span id="currentaddr"><%= data[0].Address %></span><br>
											<% } %>
											<% if (data[0].City) { %>
												<strong>City:</strong> <span id="currentcity"><%= data[0].City %></span><br>
											<% } %>
											<% if (data[0].State) { %>
												<strong>State:</strong> <span id="currentstate"><%= data[0].State %></span><br>
											<% } %>
											<% if (data[0].ZipCode) { %>
												<strong>Zip Code:</strong> <span id="currentzipcode"><%= data[0].ZipCode %></span><br>
											<% } %>
											<% if (data[0].Company) { %>
												<strong>Company:</strong> <span id="currentcompany"><%= data[0].Company %></span><br>
											<% } %>
											<% if (data[0].PhoneNumber) { %>
												<strong>PhoneNumber:</strong> <span id="currentphonenumber"><%= data[0].PhoneNumber %></span><br>
											<% } %>
											<% if (data[0].Gender) { %>
												<strong>Gender:</strong> <span id="currentgender"><%= data[0].Gender %></span><br>
											<% } %>
											<% if (data[0].Race) { %>
												<strong>Race:</strong> <span id="currentrace"><%= data[0].Race %></span><br>
											<% } %>
											<% if (data[0].IsVeteran) { %>
												<strong>Is A Veteran ?:</strong> <span id="currentvet"><%= data[0].IsVeteran %></span><br>
											<% } %>
											<% if (data[0].MilitaryBranch) { %>
												<strong>Military Branch:</strong> <span id="currentmilitarybranch"><%= data[0].MilitaryBranch %></span><br>
											<% } %>
											<% if (data[0].OperationOrWar) { %>
												<strong>War, Military Operation, or Stationed Area:</strong> <span id="currentwar"><%= data[0].OperationOrWar %></span><br>
											<% } %>
											<% if (data[0].Rank) { %>
												<strong>Rank:</strong> <span id="currentrank"><%= data[0].Rank %></span><br>
											<% } %>
											<% if (data[0].TroopDescription) { %>
												<strong>Unit Description:</strong> <span id="currenttroopdescript"><%= data[0].TroopDescription %></span><br>
											<% } %>
											<% if (data[0].Job) { %>
												<strong>Military Occupational Specialty:</strong> <span id="currentjob"><%= data[0].Job %></span><br>	
											<% } %>
											<% if (data[0].VideoInterviewLink) { %>
												<iframe width="420" height="315"
													<%- "src="+(data[0].VideoInterviewLink) %>>
												</iframe>
											<% } %>
										<% } %>
										<hr style="border: dashed 3px;" />

										<h2>Edit Information </h2>
										<form method='post' action='/UpdateProfileInfo'>
											<strong>Date Of Birth:</strong><input style="color:black;" id="newdob" name="newdob" type="date" /><br>
											<strong>Address:</strong> <input id="newaddr" name="newaddr" type="text" /><br>
											<strong>City:</strong> <input id="newcity" name="newcity" type="text" /><br>
											<strong>State (2 Digit):</strong> <input id="newstate" name="newstate" type="text" /><br>
											<strong>Zip Code:</strong> <input id="newzipcode" name="newzipcode" type="text" /><br>
											<strong>Company:</strong> <input id="newcompany" name="newcompany" type="text" /><br>
											<strong>PhoneNumber:</strong> <input id="newphonenumber" name="newphonenumber" type="text" /><br>
											<strong>Gender:</strong> <input id="newgender" name="newgender" type="text" /><br>
											<strong>Race:</strong> <input id="newrace" name="newrace" type="text" /><br>
											<strong>Is A Veteran ?:</strong> <input id="newvet" name="newvet" type="text" /><br>
											<strong>Military Branch:</strong> <input id="newmilitarybranch" name="newmilitarybranch" type="text" /><br>
											<strong>War, Military Operation, or Stationed Area:</strong> <input id="newwar" name="newwar" type="text" /><br>
											<strong>Rank:</strong> <input id="newrank" name="newrank" type="text" /><br>
											<strong>Unit Description:</strong> <input id="newtroopdescript" name="newtroopdescript" type="text" /><br>
											<strong>Military Occupational Specialty:</strong> <input id="newjob" name="newjob" type="text" /><br>
											<strong>Video Interview Link (Use Embed Link): </strong> <input id="newvideo" name="newvideo" type="text" /><br>
											<input type="submit" value="Update"><br><br>
										</form>
										
										<hr style="border: dashed 3px;" />

										<style>
											div.transbox {
												opacity: 0.65;
											}
										</style>
						</section>
					</div>
				</div>
			</div>
		</div>
		</section>
		</article>

